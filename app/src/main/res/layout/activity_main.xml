<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tortugas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.042"
            android:id="@+id/txtCabecera"/>
    <ImageView
            android:layout_width="299dp"
            android:layout_height="297dp" app:srcCompat="@drawable/tmntraph"
            android:id="@+id/tortuga"
            app:layout_constraintTop_toBottomOf="@+id/txtCabecera"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.053"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <RadioGroup
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroup" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.888">
        <RadioButton
                android:text="leo"
                android:layout_width="77dp"
                android:layout_height="43dp"
                android:id="@+id/rb_leo"
                android:onClick="radiobuttonClick"

                tools:layout_editor_absoluteX="54dp" tools:layout_editor_absoluteY="483dp"/>
        <RadioButton
                android:text="don"
                android:layout_width="83dp"
                android:layout_height="43dp"
                android:id="@+id/rb_don"
                android:onClick="radiobuttonClick"
                tools:layout_editor_absoluteY="483dp" tools:layout_editor_absoluteX="234dp"/>
        <RadioButton
                android:text="miguel"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:id="@+id/migel"
                android:onClick="radiobuttonClick"
                tools:layout_editor_absoluteY="591dp" tools:layout_editor_absoluteX="234dp"/>
        <RadioButton
                android:text="rafa"
                android:layout_width="84dp"
                android:layout_height="39dp"
                android:id="@+id/rafa"
                android:onClick="radiobuttonClick"
                tools:layout_editor_absoluteY="591dp" tools:layout_editor_absoluteX="45dp"/>
    </RadioGroup>


</android.support.constraint.ConstraintLayout>